#!/bin/bash

# Names of the files to be created
names=(
    "1-for_best_school"
    "2-while_best_school"
    "3-until_best_school"
    "4-if_9_say_hi"
    "5-4_bad_luck_8_is_your_chance"
    "6-superstitious_numbers"
    "7-clock"
    "8-for_ls"
    "9-to_file_or_not_to_file"
    "10-fizzbuzz"
    "11-read_and_cut"
    "12-tell_the_story_of_passwd"
    "13-lets_parse_apache_logs"
    "14-dig_the-data"
)

# Create files and add shebang line
for name in "${names[@]}"; do
    touch "$name"
    echo '#!/usr/bin/env bash' > "$name"
    chmod +x "$name"
done

